<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_normal">
    >
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_input_layout">
        <com.example.admin.applazada.CustomView.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:id="@+id/edtDiaChiEmailDangNhap"
            android:hint="Địa chỉ email"
           />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_input_layout">
        <com.example.admin.applazada.CustomView.PassWordEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:hint="Mật khẩu"
            android:id="@+id/edtMatKhauDangNhap"
            app:useStrike="true"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Quên mật khẩu?"
        android:id="@+id/txtMatKhauDangNhap"
        android:layout_margin="@dimen/margin_input_layout"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDangNhap"
        android:text="Đăng nhập"
        android:background="@color/bgLogo"
        android:layout_margin="@dimen/margin_input_layout"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoặc đăng nhập bằng"
        android:layout_margin="@dimen/margin_input_layout"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnDangNhapFaceBook"
            android:text="FaceBook"
            android:textColor="@color/colorFacebook"
            android:background="@drawable/vienfacebook"
            android:drawableLeft="@drawable/facebookiconsmall"

            android:layout_margin="@dimen/margin_input_layout"
            android:drawablePadding="@dimen/margin_input_layout"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnDangNhapGoogle"
            android:text="Google"
            android:textColor="@color/colorGoogle"
            android:background="@drawable/viengoogle"
            android:drawableLeft="@drawable/googleplussmall"
            android:layout_margin="@dimen/margin_input_layout"
            />
    </LinearLayout>


</LinearLayout>